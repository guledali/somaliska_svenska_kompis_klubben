<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @activity.title %></li>
        </ol>
      </nav>

      <div class="card border-0 shadow-sm mb-4">
        <img src="<%= @activity.image %>" class="card-img-top" alt="<%= @activity.title %>" style="max-height: 400px; object-fit: cover;">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-3">
            <i class="<%= @activity.icon %> fs-3 me-3 text-primary"></i>
            <h1 class="h2 mb-0"><%= @activity.title %></h1>
          </div>

          <p class="lead mb-4"><%= @activity.description %></p>

          <div class="alert alert-primary">
            <strong>Schedule:</strong> <%= @activity.schedule %>
          </div>

          <%= link_to "← Back to Home", root_path, class: "btn btn-outline-primary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
